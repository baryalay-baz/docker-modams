@model MODAMS.Models.ViewModels.Dto.dtoReporting
<style>
    .center-align {
        display: flex;
        justify-content: center;
        align-items: center;
    }
</style>
<div class="modal fade" id="mdl-asset-report">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <div class="center-align">
                    <img src="~/assets/images/brand/FGS_Small4.png" />
                </div>
                <center><h5>Asset Report</h5></center>
                <hr class="customHR" />

                <div class="form-group">
                    <label asp-for="@Model.StoreId" class="form-label"></label>
                    <select asp-for="@Model.StoreId" asp-items="@Model.Stores"
                            class="form-control select2 form-select">
                        <option value="0">All Stores</option>
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.AssetStatusId" class="form-label"></label>
                    <select asp-for="@Model.AssetStatusId" asp-items="@Model.AssetStatuses"
                            class="form-control select2 form-select">
                        <option value="0">All Statuses</option>
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.CategoryId" class="form-label"></label>
                    <select asp-for="@Model.CategoryId" asp-items="@Model.Categories"
                            class="form-control select2 form-select">
                        <option value="0">All Categories</option>
                    </select>
                </div>
            </div>
            <div class="modal-footer">
                <button id="btnReport" class="btn btn-primary"><i class="fe fe-printer"></i>&nbsp;Generate Report</button>
                <button class="btn btn-light" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
