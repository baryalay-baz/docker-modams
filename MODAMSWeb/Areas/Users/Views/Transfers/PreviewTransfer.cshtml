@model MODAMS.Models.ViewModels.Dto.dtoTransferPreview
@using MODAMS.Utility

<style>
    input[type="date"]::-webkit-calendar-picker-indicator {
        display: none;
    }

    .center-align {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .left-align {
        display: flex;
        justify-content: left;
    }

    .right-align {
        display: flex;
        justify-content: right;
    }

    .bordered-div {
        border-left: 1px solid lightgray;
        border-top: 1px solid lightgray;
        border-right: 1px solid lightgray;
        border-bottom: 1px solid lightgray;
    }

    .bordered-div-top {
        border-top: 1px solid lightgray;
    }

    .bordered-div-left {
        border-left: 1px solid lightgray;
    }

    .bordered-div-right {
        border-right: 1px solid lightgray;
    }

    .bordered-div-bottom {
        border-bottom: 1px solid lightgray;
    }

    .text-xsmall {
        font-size: 10px;
    }

</style>
<style type="text/css">
    .barcode {
        width: 200px;
        height: 50px;
    }
</style>
<div class="page-header">
    <div>
        <h1 class="page-title">Asset Transfers</h1>
    </div>
    <div class="ms-auto pageheader-btn">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="Users" asp-controller="Home" asp-action="Index">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-area="Users" asp-controller="Transfers" asp-action="Index">Transfers</a></li>
            <li class="breadcrumb-item active" aria-current="page">Preview Transfer</li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-8">
                        <div class="center-align bordered-div">
                            <table class="w-100">
                                <tr>
                                    <td class="center-align pt-2"><img src="~/assets/images/brand/FGS_Small4.png" /></td>
                                </tr>
                                <tr>
                                    <td class="center-align">
                                        <h4><b>Asset Management System</b></h4>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="center-align">
                                        <h5>Transfer Voucher</h5>
                                    </td>
                                </tr>
                                <tr><td class="align-center w-100"><hr class="customHR w-100" /></td></tr>
                                <tr>
                                    <td>
                                        <div class="card">
                                            <div class="card-body">
                                                <table class="w-100">
                                                    <tr>
                                                        <td>Transfer Number: <b>@Model.vwTransfer.TransferNumber</b></td>
                                                        <td><span class="text-bold"></span></td>
                                                        <td style="text-align: right;">Transfer Date: <b>@Model.vwTransfer.TransferDate?.ToString("dd-MMM-yyyy")</b></td>
                                                    </tr>
                                                </table>
                                                <br /><br /><br /><br /><br />
                                                <table class="w-75 table-bordered">
                                                    <tr>
                                                        <td>Store From:&nbsp;<b>@Model.vwTransfer.StoreFrom</b></td>
                                                        <td>Store To:&nbsp;<b>@Model.vwTransfer.StoreTo</b></td>
                                                    </tr>
                                                    <tr>
                                                        <td>Assets:&nbsp;<b>@Model.vwTransfer.NumberOfAssets</b></td>
                                                        <td>Status:&nbsp;<b>@Model.vwTransfer.Status</b></td>
                                                    </tr>
                                                </table>
                                                <table class="table table-bordered w-100">
                                                    <thead>
                                                        <tr>
                                                            <td>S.No</td>
                                                            <td>Category</td>
                                                            <td>Make</td>
                                                            <td>Model</td>
                                                            <td>Asset Name</td>
                                                            <td>Identification</td>
                                                            <td>Condition</td>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @{
                                                            int nCounter = 0;
                                                            string sCounter = "0";

                                                            foreach (var asset in Model.transferAssets)
                                                            {
                                                                nCounter++;
                                                                sCounter = (nCounter < 10) ? "0" + nCounter.ToString() + "." : nCounter.ToString() + ".";
                                                                <tr>
                                                                    <td>@sCounter</td>
                                                                    <td>@asset.SubCategory</td>
                                                                    <td>@asset.Make</td>
                                                                    <td>@asset.Model</td>
                                                                    <td>@asset.AssetName</td>
                                                                    <td>@asset.SerialNumber</td>
                                                                    <td>@asset.Condition</td>
                                                                </tr>
                                                            }
                                                        }

                                                    </tbody>
                                                </table>
                                                <br /><br /><br /><br /><br /><br /><br /><br /><br />
                                                <div class="flex w-75 center-align" style="margin-left:100px;">
                                                    <div class="flex w-100">
                                                        <div class="float-start left-align">Transfer By</div>
                                                        <div class="float-end left-align">
                                                            @{
                                                                if (Model.vwTransfer.TransferStatusId == 4)
                                                                {
                                                                    @Html.Raw("<span class=\"text-danger\">Rejected By</span>");
                                                                }
                                                                else
                                                                {
                                                                    @Html.Raw("<span class=\"text-success\">Received By</span>");
                                                                }
                                                            }
                                                            
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="flex w-100 center-align" style="margin-left:50px;">
                                                    <div class="flex w-100">
                                                        <div class="float-start left-align">
                                                            @{
                                                                if (Model.vwTransfer.TransferStatusId > SD.Transfer_Pending)
                                                                {
                                                                    <kendo-barcode name="barcode0" class="barcode" value="@Model.TransferBy" type="BarcodeSymbology.Code128">
                                                                    </kendo-barcode>
                                                                }
                                                            }

                                                        </div>
                                                        <div class="float-end left-align" style="margin-right:160px;">
                                                            @{
                                                                if (Model.vwTransfer.TransferStatusId > SD.Transfer_SubmittedForAcknowledgement)
                                                                {
                                                                    <kendo-barcode name="barcode1" class="barcode" value="@Model.ReceivedBy" type="BarcodeSymbology.Code128">
                                                                    </kendo-barcode>
                                                                }
                                                            }

                                                        </div>
                                                        <br /><br />
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body divShadow center-align" id="dvAction">
                                @{
                                    if (Model.vwTransfer.TransferStatusId == SD.Transfer_Pending)
                                    {
                                        if (Model.IsSender)
                                        {
                                            <form method="post" asp-action="SubmitForAcknowledgement" id="frmSubmitForAcknowledgement">
                                                <input type="hidden" name="id" value="@Model.vwTransfer.Id"/>
                                                <button type="submit" class="btn btn-primary " id="btnSubmit">
                                                    <i class="fa fa-check-circle"></i><span class="loading">&nbsp;Submit for Acknowledgement</span>
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            @Html.Raw("<span>No action required</span>");
                                        }
                                    }
                                    else if (Model.vwTransfer.TransferStatusId == SD.Transfer_SubmittedForAcknowledgement)
                                    {
                                        if (Model.IsReceiver)
                                        {
                                            <form method="post" asp-action="AcknowledgeTransfer" id="frmAcknowledgeTransfer">
                                                <input type="hidden" name="id" value="@Model.vwTransfer.Id" />
                                                <button type="submit" class="btn btn-primary " id="btnSubmit">
                                                    <i class="fa fa-check-circle"></i>&nbsp;Acknowledge Transfer
                                                </button>
                                            </form>
                                            @Html.Raw("&nbsp;&nbsp;")
                                            <form method="post" asp-action="RejectTransfer" id="frmRejectTransfer">
                                                <input type="hidden" name="id" value="@Model.vwTransfer.Id" />
                                                <button type="submit" class="btn btn-secondary">
                                                    <i class="fa fa-close"></i>&nbsp;Reject Transfer
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            @Html.Raw("<span>No action required</span>");
                                        }
                                    }
                                    else
                                    {
                                        @Html.Raw("<span>No action required</span>");
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="row">
                    @*<hr class="customHR" />*@
                    <div class="col-sm-12">
                        <a asp-action="Index" asp-controller="Transfers" id="btnCancel" class="btn btn-outline-default"><i class="fe fe-corner-up-left"></i>&nbsp;Previous</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script>
        $(document).ready(function () {
            hideMenu();

            console.log($("#dvAction").html());
            $("#btnSubmit").on("click",(e)=>{
                //e.preventDefault();
                
                $("#btnSubmit").addClass("btn-loading btn-icon");
            });
        });

    </script>
}