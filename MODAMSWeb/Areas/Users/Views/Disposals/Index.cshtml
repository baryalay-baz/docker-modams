                    </select> *@
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-12 mb-3">
        <div class="btn-list">
            @{
                string sDisabled = "disabled";
                if (Model.IsAuthorized)
                {
                    sDisabled = "";
