@using Microsoft.AspNetCore.Mvc.Localization
@using System.Globalization
@inject IViewLocalizer Localizer

@model List<MODAMS.Models.ViewModels.vwEmployees>

@{
    ViewData["TourPageKey"] = "Employees/Index";
    bool _isSomali = CultureInfo.CurrentUICulture.Name == "so";
}

<style>
    /* Keep action icons visible on hover inside row-actions */
    .table--hover-actions .row-actions .btn i {
        color: currentColor;
    }

    /* Lock = danger tone */
    .table--hover-actions .row-actions .act-lock {
        color: #dc3545; /* danger */
        border-color: rgba(220,53,69,.45);
    }

        .table--hover-actions .row-actions .act-lock:hover,
        .table--hover-actions .row-actions .act-lock:focus {
            background: rgba(220,53,69,.12);
            color: #dc3545;
            border-color: rgba(220,53,69,.6);
        }

    /* Unlock = success tone */
    .table--hover-actions .row-actions .act-unlock {
        color: #198754; /* success */
        border-color: rgba(25,135,84,.45);
    }

        .table--hover-actions .row-actions .act-unlock:hover,
        .table--hover-actions .row-actions .act-unlock:focus {
            background: rgba(25,135,84,.12);
            color: #198754;
            border-color: rgba(25,135,84,.6);
        }

    /* Safety: neutralize outline-light going white-on-white */
    .table--hover-actions .row-actions .btn.btn-outline-light:hover,
    .table--hover-actions .row-actions .btn.btn-outline-light:focus {
        background: #eef2f7;
        color: #0d6efd;
        border-color: rgba(13,110,253,.35);
    }

</style>
<!-- PAGE-HEADER -->
<div class="page-header" data-tour="emp.header">
    <div>
        <h1 class="page-title">@Localizer["Employees"]</h1>
    </div>
    <div class="ms-auto pageheader-btn">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="Users" asp-controller="Home" asp-action="Index">@Localizer["Dashboard"]</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Localizer["EmployeeList"]</li>
        </ol>
    </div>
</div>
<!-- PAGE-HEADER END -->

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body p-4">
                <div class="d-flex align-items-center justify-content-between">
                    <h4 class="m-0">@Localizer["EmployeeList"]</h4>
                    <div class="btn-list"></div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-12 mb-3">
        <div class="btn-list">
            <a asp-area="Admin"
               asp-controller="Employees"
               asp-action="CreateEmployee"
               class="btn btn-info-gradient trShadow"
               data-tour="emp.new">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-inner-icn text-white" enable-background="new 0 0 24 24" viewBox="0 0 24 24"><path d="M16,11.5h-3.5V8c0-0.276123-0.223877-0.5-0.5-0.5S11.5,7.723877,11.5,8v3.5H8c-0.276123,0-0.5,0.223877-0.5,0.5s0.223877,0.5,0.5,0.5h3.5v3.5005493C11.5001831,16.2765503,11.723999,16.5001831,12,16.5h0.0006104C12.2765503,16.4998169,12.5001831,16.276001,12.5,16v-3.5H16c0.276123,0,0.5-0.223877,0.5-0.5S16.276123,11.5,16,11.5z M12,2C6.4771729,2,2,6.4771729,2,12s4.4771729,10,10,10c5.5202026-0.0062866,9.9937134-4.4797974,10-10C22,6.4771729,17.5228271,2,12,2z M12,21c-4.9705811,0-9-4.0294189-9-9s4.0294189-9,9-9c4.9682617,0.0056152,8.9943848,4.0317383,9,9C21,16.9705811,16.9705811,21,12,21z" /></svg>
                @Localizer["NewEmployee"]
            </a>
        </div>
    </div>

    <div class="col-12 col-sm-12">
        <div class="card">
            <div class="card-body project-list-table-container">
                <div class="table-responsive" data-tour="emp.table">
                    <table id="tblEmployees" class="table text-nowrap mb-0 table-bordered border-top border-bottom project-list-main">
                        <thead class="table-head">
                            <tr>
                                <th class="bg-transparent border-bottom-0 w-5">@Localizer["SNo"]</th>
                                <th class="bg-transparent border-bottom-0">@Localizer["FullName"]</th>
                                <th class="bg-transparent border-bottom-0">@Localizer["JobTitle"]</th>
                                <th class="bg-transparent border-bottom-0">@Localizer["RoleName"]</th>
                                <th class="bg-transparent border-bottom-0">@Localizer["Department"]</th>
                                <th class="bg-transparent border-bottom-0">@Localizer["IsActive"]</th>
                                @* Action column removed; hover actions will be injected by JS *@
                            </tr>
                        </thead>
                        <tbody class="table-body">
                            @{
                                var nCounter = 0;
                                var sCounter = "";
                                var sDepartmentName = "";

                                foreach (var employee in Model)
                                {
                                    nCounter++;
                                    sCounter = (nCounter < 10) ? "0" + nCounter : nCounter.ToString();

                                    sDepartmentName = _isSomali ? employee.DepartmentNameSo : employee.DepartmentName;
                                    sDepartmentName = sDepartmentName == "No Department Assigned" ? "" : sDepartmentName;

                                    <tr data-id="@employee.Id" data-active="@employee.IsActive.ToString().ToLower()">
                                        <td class="text-muted fs-15 fw-semibold text-center">@sCounter.</td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="me-2">
                                                    <span>
                                                        <img style="min-width:30px;" src="@employee.ImageUrl" alt="profile-user" class="data-image avatar avatar-lg rounded-circle">
                                                    </span>
                                                </div>
                                                <div>
                                                    <h6 class="mb-0">@employee.FullName</h6>
                                                    <span class="text-muted fs-12">@employee.Email</span>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="text-muted fs-15 fw-semibold">@employee.JobTitle</td>
                                        <td class="text-muted fs-15 fw-semibold">@employee.RoleName</td>
                                        <td class="text-muted fs-15 fw-semibold">@sDepartmentName</td>
                                        <td class="text-muted fs-15 fw-semibold">
                                            @if (employee.IsActive)
                                            {
                                                <span class="text-primary">
                                                    <span class="mb-0 mt-1 badge rounded-pill bg-primary-transparent text-blue">@Localizer["Active"]</span>
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="text-secondary">
                                                    <span class="mb-0 mt-1 badge rounded-pill bg-secondary-transparent text-danger">@Localizer["Locked"]</span>
                                                </span>
                                            }
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer">
                <a asp-area="Users" asp-controller="Home" asp-action="Index" class="btn btn-outline-default">
                    <i class="fe fe-corner-up-left"></i>&nbsp;@Localizer["Previous"]
                </a>
            </div>
        </div>
    </div>
    <!-- COL END -->
</div>

@section scripts {
    <partial name="_DataTablesAssets" />
    <script src="~/js/pages/admin/employees/employees-index.js" asp-append-version="true"></script>
}
