        </div>
    </div>
    <div class="col-md-12 mb-3">
        <div class="btn-list">
            <a asp-area="Admin" asp-controller="Employees" asp-action="CreateEmployee" class="btn btn-info-gradient trShadow">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-inner-icn text-white" enable-background="new 0 0 24 24" viewBox="0 0 24 24"><path d="M16,11.5h-3.5V8c0-0.276123-0.223877-0.5-0.5-0.5S11.5,7.723877,11.5,8v3.5H8c-0.276123,0-0.5,0.223877-0.5,0.5s0.223877,0.5,0.5,0.5h3.5v3.5005493C11.5001831,16.2765503,11.723999,16.5001831,12,16.5h0.0006104C12.2765503,16.4998169,12.5001831,16.276001,12.5,16v-3.5H16c0.276123,0,0.5-0.223877,0.5-0.5S16.276123,11.5,16,11.5z M12,2C6.4771729,2,2,6.4771729,2,12s4.4771729,10,10,10c5.5202026-0.0062866,9.9937134-4.4797974,10-10C22,6.4771729,17.5228271,2,12,2z M12,21c-4.9705811,0-9-4.0294189-9-9s4.0294189-9,9-9c4.9682617,0.0056152,8.9943848,4.0317383,9,9C21,16.9705811,16.9705811,21,12,21z" /></svg>
                @Localizer["NewEmployee"]
            </a>
        </div>
    </div>
    <div class="col-12 col-sm-12">
        <div class="card">
            <div class="card-body project-list-table-container">
                <div class="table-responsive">
                    <table id="tblEmployees" class="table text-nowrap mb-0 table-bordered border-top border-bottom project-list-main">
                        <thead class="table-head">
                            <tr>
                                <th class="bg-transparent border-bottom-0 w-5">@Localizer["SNo"]</th>
                                <th class="bg-transparent border-bottom-0">@Localizer["FullName"]</th>
                                <th class="bg-transparent border-bottom-0">@Localizer["JobTitle"]</th>
                                <th class="bg-transparent border-bottom-0">@Localizer["RoleName"]</th>
                                <th class="bg-transparent border-bottom-0">@Localizer["Department"]</th>
                                <th class="bg-transparent border-bottom-0">@Localizer["IsActive"]</th>
                                <th class="bg-transparent border-bottom-0 no-btn">@Localizer["Action"]</th>
                            </tr>
                        </thead>
                        <tbody class="table-body">
                            @{
                                var nCounter = 0;
                                var sCounter = "";
                                var sDepartmentName = "";

                                //var notAssignedEn = "No Department Assigned";
                                //var notAssignedSo = "Waax aan la qoondeyn"; // Somali translation

                                foreach (var employee in Model)
                                {
                                    nCounter++;
                                    sCounter = (nCounter < 10) ? "0" + nCounter : nCounter.ToString();

                                    sDepartmentName = _isSomali ? employee.DepartmentNameSo : employee.DepartmentName;
                                    sDepartmentName = sDepartmentName == "No Department Assigned" ? "" : sDepartmentName;

                                    // sDepartmentName = _isSomali
                                    // ? (employee.DepartmentNameSo == notAssignedEn ? notAssignedSo : employee.DepartmentNameSo)
                                    // : employee.DepartmentName;

                                    <tr>
                                        <td class="text-muted fs-15 fw-semibold text-center">@sCounter.</td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="me-2">
                                                    <span>
                                                        <img style="min-width:30px;" src="@employee.ImageUrl" alt="profile-user" class="data-image avatar avatar-lg rounded-circle">
                                                    </span>
                                                </div>
                                                <div>
                                                    <h6 class="mb-0">@employee.FullName</h6>
                                                    <span class="text-muted fs-12">@employee.Email</span>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="text-muted fs-15 fw-semibold">@employee.JobTitle</td>
                                        <td class="text-muted fs-15 fw-semibold">@employee.RoleName</td>
                                        <td class="text-muted fs-15 fw-semibold">@sDepartmentName</td>
                                        <td class="text-muted fs-15 fw-semibold">
                                            @{
                                                if (employee.IsActive)
                                                {
                                                    <span class="text-primary">
                                                        <span class="mb-0 mt-1 badge rounded-pill bg-primary-transparent text-blue">@Localizer["Active"]</span>
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="text-secondary">
                                                        <span class="mb-0 mt-1 badge rounded-pill bg-secondary-transparent text-danger">@Localizer["Locked"]</span>
                                                    </span>
                                                }
                                            }
                                        </td>

                                        <td>
                                            <div class="d-flex align-items-stretch">
                                                <a asp-controller="Employees" asp-action="EditEmployee" asp-route-id="@employee.Id" class="btn btn-sm btn-outline-info me-1" data-bs-toggle="tooltip" data-bs-original-title="@Localizer["EditEmployee"]">
                                                    <i class="fe fe-edit"></i>
                                                </a>
                                                @{
                                                    if (employee.IsActive)
                                                    {
                                                        <a class="btn btn-sm btn-outline-secondary me-1" data-bs-toggle="dropdown" data-bs-original-title="@Localizer["LockAccount"]">
                                                            <i class="fe fe-lock"></i>
                                                        </a>
                                                    }
                                                    else
                                                    {
                                                        <a class="btn btn-sm btn-outline-primary me-1" data-bs-toggle="dropdown" data-bs-original-title="@Localizer["UnlockAccount"]">
                                                            <i class="fe fe-unlock"></i>
                                                        </a>
                                                    }
                                                }
                                                <div class="dropdown-menu" style="">
                                                    <div class="p-5">
                                                        @{
                                                            if (employee.IsActive)
                                                            {
                                                                <h4 class="dropdown-title"><i class="fa fa-lock"></i> @Localizer["LockAccount"]</h4>
                                                                <br />
                                                                //<p>Are you sure you want to lock this account?</p>
                                                                <p>@Localizer["LockConfirmationMessage"]</p>
                                                                <a asp-area="Admin" asp-controller="Employees" asp-action="LockAccount" asp-route-id="@employee.Id" class="btn btn-secondary btn-sm">
                                                                    <i class="fa fa-lock"></i>
                                                                    @Localizer["LockAccount"]
                                                                </a>
                                                            }
                                                            else
                                                            {
                                                                <h4 class="dropdown-title"><i class="fa fa-unlock"></i>  @Localizer["UnlockAccount"]</h4>
                                                                <br />
                                                                //<p>Are you sure you want to unlock this account?</p>\
                                                                <p>@Localizer["UnlockConfirmationMessage"]</p>
                                                                <a asp-area="Admin" asp-controller="Employees" asp-action="UnlockAccount" asp-route-id="@employee.Id" class="btn btn-primary btn-sm">
                                                                    <i class="fa fa-unlock"></i>
                                                                    @Localizer["UnlockAccount"]
                                                                </a>
                                                            }
                                                        }

                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer">
                <a asp-area="Users" asp-controller="Home" asp-action="Index" class="btn btn-outline-default"><i class="fe fe-corner-up-left"></i>&nbsp;@Localizer["Previous"]</a>
            </div>
        </div>
    </div>
    <!-- COL END -->
</div>
