@using Microsoft.AspNetCore.Mvc.Localization
@using System.Globalization
@inject IViewLocalizer Localizer

@model MODAMS.Models.ViewModels.Dto.DepartmentDTO

@{
    ViewData["TourPageKey"] = "Departments/CreateDepartment";
}

<!-- PAGE-HEADER -->
<div class="page-header" data-tour="dept.create.header">
    <div>
        <h1 class="page-title" data-tour="dept.create.title">@Localizer["CreateDepartment"]</h1>
    </div>
    <div class="ms-auto pageheader-btn" data-tour="dept.create.breadcrumbs">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="Users" asp-controller="Home" asp-action="Index">@Localizer["Dashboard"]</a></li>
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Departments" asp-action="Index">@Localizer["DepartmentList"]</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Localizer["CreateDepartment"]</li>
        </ol>
    </div>
</div>
<!-- PAGE-HEADER END -->
<!--ROW OPENED-->
<div class="row">
    <div class="col-lg-12 col-md-12">
        <div class="card">
            <div class="card-header border-bottom">
                <h4 class="mb-0" data-tour="dept.create.section">@Localizer["DepartmentDetails"]</h4>
            </div>

            <div class="card-body p-0">
                <div class="row p-5 border-bottom">
                    <div class="col-lg-8 col-md-8">
                        <form method="post" asp-action="CreateDepartment" id="frmDepartment" data-tour="dept.create.form">
                            <div class="card-body">
                                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                                <input asp-for="department.Id" hidden />

                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="mb-3 form-group" data-tour="dept.create.name">
                                            <label asp-for="department.Name"></label>
                                            <input asp-for="department.Name" class="form-control" aria-required="true" autocomplete="off" />
                                            <span asp-validation-for="department.Name" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="mb-3 form-group" data-tour="dept.create.nameSo">
                                            <label asp-for="department.NameSo"></label>
                                            <input asp-for="department.NameSo" class="form-control" aria-required="true" autocomplete="off" />
                                            <span asp-validation-for="department.NameSo" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="mb-3 form-group" data-tour="dept.create.upper">
                                            <label asp-for="department.UpperLevelDeptId"></label>
                                            <select asp-for="department.UpperLevelDeptId" asp-items="@Model.Departments"
                                                    class="form-control select2 form-select"
                                                    data-placeholder="-@Localizer["SelectDepartment"]-">
                                                <option disabled selected>-@Localizer["SelectDepartment"]-</option>
                                            </select>
                                            <span asp-validation-for="department.UpperLevelDeptId" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="row p-5">
                    <div class="btn-list">
                        <button id="btnSubmit" class="btn btn-info" data-tour="dept.create.submit">
                            <i class="fa fa-check-circle"></i> @Localizer["SaveDepartment"]
                        </button>
                        <a asp-area="Admin" asp-controller="Departments" asp-action="Index" class="btn btn-gray" data-tour="dept.create.cancel">
                            <i class="fa fa-close"></i>&nbsp;@Localizer["Cancel"]
                        </a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
<!--ROW CLOSED-->
@section scripts {
    <script src="~/js/pages/admin/departments/departments-createdepartment.js" asp-append-version="true"></script>
}
