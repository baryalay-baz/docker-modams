@section scripts {
    <script>
        $(document).ready(() => {
            hideMenu();
            makeDataTable('#tblLoginHistory','1');
            makeDataTable('#tblAuditLog','1');
            makeDataTable('#tblDeletedAssets','1');

            $("#SelectedMonth").on("change", () => {
                let sVal = $("#SelectedMonth").val();
                let sYear = $("#SelectedYear").val();
                window.location.href = "/Admin/Settings/Index?nMonth=" + sVal + "&nYear=" + sYear;
            });

            $("#SelectedYear").on("change", () => {
                let sVal = $("#SelectedMonth").val();
                let sYear = $("#SelectedYear").val();
                window.location.href = "/Admin/Settings/Index?nMonth=" + sVal + "&nYear=" + sYear;
            });

            //$('.select2').select2();
        })
    </script>
