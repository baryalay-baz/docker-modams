@using Microsoft.AspNetCore.Mvc.Localization
@using System.Globalization
@inject IViewLocalizer Localizer

@model MODAMS.Models.Donor

@{
    ViewData["TourPageKey"] = "Donors/EditDonor";
}

<!-- PAGE-HEADER -->
<div class="page-header" data-tour="don.edit.header">
    <div>
        <h1 class="page-title" data-tour="don.edit.title">@Localizer["EditDonor"]</h1>
    </div>
    <div class="ms-auto pageheader-btn" data-tour="don.edit.breadcrumbs">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-area="Users" asp-controller="Home" asp-action="Index">@Localizer["Dashboard"]</a>
            </li>
            <li class="breadcrumb-item">
                <a asp-area="Admin" asp-controller="Donors" asp-action="Index">@Localizer["Donors"]</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">@Localizer["EditDonor"]</li>
        </ol>
    </div>
</div>
<!-- PAGE-HEADER END -->
<!--ROW OPENED-->
<div class="row">
    <div class="col-lg-12 col-md-12">
        <div class="card">
            <div class="card-header border-bottom">
                <h4 class="mb-0" data-tour="don.edit.section">@Localizer["DonorDetails"]</h4>
            </div>

            <div class="card-body p-0">
                <div class="row p-5 border-bottom">
                    <div class="col-lg-8 col-md-8">
                        <form method="post" asp-action="EditDonor" id="frmDonor" data-tour="don.edit.form">
                            <div class="card-body">
                                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                                <input asp-for="Id" type="hidden" />

                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="mb-3 form-group" data-tour="don.edit.code">
                                            <label asp-for="Code"></label>
                                            <input asp-for="Code" class="form-control" aria-required="true" autocomplete="off" />
                                            <span asp-validation-for="Code" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="mb-3 form-group" data-tour="don.edit.name">
                                            <label asp-for="Name"></label>
                                            <input asp-for="Name" class="form-control" aria-required="true" autocomplete="off" />
                                            <span asp-validation-for="Name" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div> <!-- col -->
                </div> <!-- row -->

                <div class="row p-5">
                    <div class="btn-list">
                        <button id="btnSubmit" class="btn btn-info" data-tour="don.edit.submit">
                            <i class="fa fa-check-circle"></i> @Localizer["SaveChanges"]
                        </button>
                        <a asp-area="Admin" asp-controller="Donors" asp-action="Index"
                           class="btn btn-gray" data-tour="don.edit.cancel">
                            <i class="fa fa-close"></i>&nbsp;@Localizer["Cancel"]
                        </a>
                    </div>
                </div>
            </div> <!-- card-body -->
        </div>
    </div>
</div>
<!--ROW CLOSED-->
@section scripts {
    <script src="~/js/pages/admin/donors/donors-editdonor.js" asp-append-version="true"></script>
}
