@using Microsoft.AspNetCore.Mvc.Localization
@using System.Globalization
@inject IViewLocalizer Localizer

@model List<MODAMS.Models.Donor>

@{
    ViewData["TourPageKey"] = "Donors/Index";
    var isSo = CultureInfo.CurrentUICulture.Name == "so";
}

<div class="page-header" data-tour="donors.header">
    <div>
        <h1 class="page-title" data-tour="donors.title">@Localizer["Donors"]</h1>
    </div>
    <div class="ms-auto pageheader-btn" data-tour="donors.breadcrumbs">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-area="Users" asp-controller="Home" asp-action="Index">@Localizer["Dashboard"]</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">@Localizer["Donors"]</li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-12 col-sm-12">
        <div class="card">
            <div class="card-body project-list-table-container">
                <div class="col-12 col-lg-8 table-responsive" data-tour="donors.table.container">
                    <div class="toolbar d-flex align-items-center gap-2 flex-wrap mb-2">
                        <a asp-area="Admin" asp-controller="Donors" asp-action="CreateDonor"
                           class="btn btn-outline-info"
                           data-tour="donors.create" title="@Localizer["NewDonor"]">
                            <i class="fa fa-circle-plus" aria-hidden="true"></i>
                            <span>@Localizer["NewDonor"]</span>
                        </a>
                    </div>
                    <table id="tblDonors"
                           class="table text-nowrap mb-0 table-bordered border-top border-bottom project-list-main"
                           data-tour="donors.table">
                        <thead class="table-head">
                            <tr>
                                <th class="bg-transparent border-bottom-0 w-5">#</th>
                                <th class="bg-transparent border-bottom-0">@Localizer["DonorCode"]</th>
                                <th class="bg-transparent border-bottom-0">@Localizer["DonorName"]</th>
                            </tr>
                        </thead>
                        <tbody class="table-body">
                            @{
                                var nCounter = 0;
                                foreach (var donor in Model)
                                {
                                    nCounter++;
                                    var sCounter = (nCounter < 10) ? "0" + nCounter : nCounter.ToString();

                                    <tr data-id="@donor.Id">
                                        <td class="text-muted fs-15 fw-semibold text-center">@sCounter.</td>
                                        <td class="text-muted fs-15 fw-semibold">@donor.Code</td>
                                        <td class="text-muted fs-15 fw-semibold">@donor.Name</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Optional: spot to explain search/export for the tour -->
                <div class="d-none" data-tour="donors.table.search"></div>
                <div class="d-none" data-tour="donors.table.export"></div>
            </div>

            <div class="card-footer">
                <a asp-area="Users" asp-controller="Home" asp-action="Index"
                   class="btn btn-outline-default" data-tour="donors.back">
                    <i class="fe fe-corner-up-left"></i>&nbsp;@Localizer["Previous"]
                </a>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <partial name="_DataTablesAssets" />
    <script src="~/js/pages/admin/donors/donors-index.js" asp-append-version="true"></script>
}
