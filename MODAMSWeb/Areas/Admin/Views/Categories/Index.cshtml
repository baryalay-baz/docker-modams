@using Microsoft.AspNetCore.Mvc.Localization
@using System.Globalization
@inject IViewLocalizer Localizer

@model MODAMS.Models.ViewModels.Dto.CategoriesDTO

@{
    ViewData["TourPageKey"] = "Categories/Index";
}

<style>
    .trShadow {
        border: 1px solid lightblue;
        box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2), 0px 6px 20px 0px rgba(0,0,0,0.19);
    }
</style>

<div class="page-header" data-tour="cat.header">
    <div>
        <h1 class="page-title">@Localizer["ManageCategories"]</h1>
    </div>
    <div class="ms-auto pageheader-btn">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-area="Users" asp-controller="Home" asp-action="Index">@Localizer["Dashboard"]</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">@Localizer["Categories"]</li>
        </ol>
    </div>
</div>

<div class="row">
    <!-- Left: Categories -->
    <div class="col-md-6">
        <div class="card">
            <div class="card-body p-4">
                <div class="d-flex align-items-center justify-content-between">
                    <h4 class="m-0">@Localizer["Categories"]</h4>
                    <div class="btn-list"></div>
                </div>
            </div>
        </div>

        <div class="btn-list">
            <a asp-area="Admin"
               asp-controller="Categories"
               asp-action="CreateCategory"
               class="btn btn-info-gradient mb-4 trShadow"
               data-tour="cat.new">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-inner-icn text-white" enable-background="new 0 0 24 24" viewBox="0 0 24 24">
                    <path d="M16,11.5h-3.5V8c0-0.276123-0.223877-0.5-0.5-0.5S11.5,7.723877,11.5,8v3.5H8c-0.276123,0-0.5,0.223877-0.5,0.5
                             s0.223877,0.5,0.5,0.5h3.5v3.5005493C11.5001831,16.2765503,11.723999,16.5001831,12,16.5h0.0006104
                             C12.2765503,16.4998169,12.5001831,16.276001,12.5,16v-3.5H16c0.276123,0,0.5-0.223877,0.5-0.5S16.276123,11.5,16,11.5z
                             M12,2C6.4771729,2,2,6.4771729,2,12s4.4771729,10,10,10c5.5202026-0.0062866,9.9937134-4.4797974,10-10
                             C22,6.4771729,17.5228271,2,12,2z M12,21c-4.9705811,0-9-4.0294189-9-9s4.0294189-9,9-9
                             c4.9682617,0.0056152,8.9943848,4.0317383,9,9C21,16.9705811,16.9705811,21,12,21z" />
                </svg>
                @Localizer["NewCategory"]
            </a>
        </div>

        <div class="card">
            <div class="card-body project-list-table-container">
                <div class="table-responsive">
                    <table id="tblCategories"
                           class="table table-bordered text-nowrap border-bottom dataTable no-footer"
                           data-tour="cat.table">
                        <thead class="table-head">
                            <tr>
                                <th class="bg-transparent border-bottom-0 w-5">#</th>
                                <th class="bg-transparent border-bottom-0">@Localizer["CategoryName"]</th>
                                <th class="bg-transparent border-bottom-0">@Localizer["CategoryNameSomali"]</th>
                                @* Action column REMOVED *@
                            </tr>
                        </thead>
                        <tbody class="table-body">
                            @{
                                var nCounter = 0;
                                var sCounter = "";
                                string sSelected = "";

                                foreach (var category in Model.categories)
                                {
                                    sSelected = (category.Id == Model.SelectedCategoryId) ? "class=trShadow" : "";
                                    nCounter++;
                                    sCounter = (nCounter < 10) ? "0" + nCounter : nCounter.ToString();
                                    <tr data-id="@category.Id" @sSelected style="cursor:pointer;">
                                        <td class="text-muted fs-15 fw-semibold text-center">
                                            <span class="cid" style="display:none;">@category.Id</span>@sCounter.
                                        </td>
                                        <td class="cn text-muted fs-15 fw-semibold">@category.CategoryName</td>
                                        <td class="text-muted fs-15 fw-semibold">@category.CategoryNameSo</td>
                                        @* Action cell REMOVED *@
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="card-footer">
                <a asp-area="Users" asp-controller="Home" asp-action="Index" class="btn btn-outline-default">
                    <i class="fe fe-corner-up-left"></i>&nbsp;@Localizer["Previous"]
                </a>
            </div>
        </div>
    </div>

    <!-- Right: Sub-Categories -->
    <div class="col-md-6">
        <div class="card">
            <div class="card-body p-4 trShadow">
                <div class="d-flex align-items-center justify-content-between">
                    <h4 class="m-0" id="lblCategory" data-tour="cat.sub.title">@Localizer["SubCategories"]</h4>
                    <div class="btn-list"></div>
                </div>
            </div>
        </div>

        <div class="btn-list">
            <a asp-area="Admin"
               asp-controller="Categories"
               asp-action="CreateSubCategory"
               class="btn btn-primary mb-4 trShadow disabled"
               id="btnCreateSubCategory"
               data-tour="cat.sub.new">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-inner-icn text-white" enable-background="new 0 0 24 24" viewBox="0 0 24 24">
                    <path d="M16,11.5h-3.5V8c0-0.276123-0.223877-0.5-0.5-0.5S11.5,7.723877,11.5,8v3.5H8c-0.276123,0-0.5,0.223877-0.5,0.5
                             s0.223877,0.5,0.5,0.5h3.5v3.5005493C11.5001831,16.2765503,11.723999,16.5001831,12,16.5h0.0006104
                             C12.2765503,16.4998169,12.5001831,16.276001,12.5,16v-3.5H16c0.276123,0,0.5-0.223877,0.5-0.5S16.276123,11.5,16,11.5z
                             M12,2C6.4771729,2,2,6.4771729,2,12s4.4771729,10,10,10c5.5202026-0.0062866,9.9937134-4.4797974,10-10
                             C22,6.4771729,17.5228271,2,12,2z M12,21c-4.9705811,0-9-4.0294189-9-9s4.0294189-9,9-9
                             c4.9682617,0.0056152,8.9943848,4.0317383,9,9C21,16.9705811,16.9705811,21,12,21z" />
                </svg>
                @Localizer["NewSubCategory"]
            </a>
        </div>

        <div class="card trShadow">
            <div class="card-body project-list-table-container">
                <div class="table-responsive" id="dvSubCategories">
                    <table id="tblSubCategories"
                           class="table text-nowrap mb-0 table-bordered border-top border-bottom project-list-main"
                           data-tour="cat.sub.table">
                        <thead class="table-head bg-primary-gradient ms-auto divShadow">
                            <tr>
                                <th class="bg-transparent border-bottom-0 w-5">#</th>
                                <th class="bg-transparent border-bottom-0">@Localizer["SubCategoryName"]</th>
                                <th class="bg-transparent border-bottom-0">@Localizer["SubCategoryNameSomali"]</th>
                                @* Action column REMOVED *@
                            </tr>
                        </thead>
                        <tbody class="table-body">
                            @{
                                nCounter = 0;
                                sCounter = "";
                                var nCategoryId = 0;
                                foreach (var subCategory in Model.subCategories)
                                {
                                    nCounter++;
                                    sCounter = (nCounter < 10) ? "0" + nCounter : nCounter.ToString();
                                    nCategoryId = subCategory.CategoryId;
                                    <tr data-id="@subCategory.Id">
                                        <td class="text-muted fs-15 fw-semibold text-center">@sCounter.</td>
                                        <td class="text-muted fs-15 fw-semibold">@subCategory.SubCategoryName</td>
                                        <td class="text-muted fs-15 fw-semibold">@subCategory.SubCategoryNameSo</td>
                                        @* Action cell REMOVED *@
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<section id="dvSubCategoriesData" style="display:none;"></section>
<input type="hidden" id="hiddenCategoryId" value="@nCategoryId" />

@section scripts {
    <partial name="_DataTablesAssets" />
    <script src="~/js/pages/admin/categories/categories-index.js" asp-append-version="true"></script>
}
