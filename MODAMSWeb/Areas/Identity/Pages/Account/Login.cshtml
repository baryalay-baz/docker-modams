@page
@model LoginModel

@{
    Layout = "_Layout1";
}

<!-- CONTAINER OPEN -->
<div class="col col-login mx-auto text-center">
    @*<a asp-area="" asp-page="/Index" class="text-center">
    <img src="~/assets/images/brand/ams.png" class="header-brand-img" alt="">
    </a>*@
</div>
<div class="container-login100">
    <div class="wrap-login100 p-0">
        <div class="card-body">
            <span class="login100-form-title">
                <img src="~/assets/images/brand/FGS.png" class="h-8" alt="">
            </span>
            
            <div asp-validation-summary="ModelOnly" class="text-danger text-center" role="alert"></div>

            <form id="account" class="login100-form validate-form" method="post">
                <div class="wrap-input100 validate-input" data-bs-validate="Valid email is required: ex@abc.xyz">
                    <input asp-for="Input.Email" class="input100" placeholder="Email">
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="zmdi zmdi-email" aria-hidden="true"></i>
                    </span>
                </div>
                <div class="wrap-input100 validate-input" data-bs-validate="Password is required">
                    <input asp-for="Input.Password" class="input100" placeholder="Password">
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="zmdi zmdi-lock" aria-hidden="true"></i>
                    </span>
                </div>
                <div class="checkbox text-start pt-1">
                    <div class="custom-checkbox custom-control">
                        <input asp-for="Input.RememberMe" type="checkbox" data-checkboxes="mygroup" class="custom-control-input" id="checkbox-2">
                        <label for="checkbox-2" class="custom-control-label">Remember Me</label>
                    </div>
                </div>
                <div class="text-end pt-1">
                    <p class="mb-0"><a asp-area="Identity" asp-controller="Account" asp-action="ForgotPassword" class="text-primary ms-1">Forgot Password?</a></p>
                </div>
                <div class="container-login100-form-btn">
                    <button type="submit" class="login100-form-btn btn-primary">
                        Login
                    </button>
                </div>
                <div class="text-center pt-3">
                    <p class="text-dark mb-0">Not registered yet?<a href="Register" class="text-primary ms-1">Register</a></p>
                </div>
            </form>
        </div>
        <div class="card-footer">
            <div class="col-md-12 col-sm-12 text-center text-darkgray">
                <span style="font-size:12px;">Developed by&nbsp;|&nbsp;</span><img src="~/assets/images/brand/unops_footer_logo.png">&nbsp;
            </div>
        </div>
    </div>
</div>
<!-- CONTAINER CLOSED -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}




